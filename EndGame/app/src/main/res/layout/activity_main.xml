<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/howmany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용량 표시"/>
    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시작값 표시"/>
    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="결과값 표시"/>
    <TextView
        android:id="@+id/signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="신호강도 표시"/>
    <TextView
        android:id="@+id/LTEsignal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LTE신호강도 표시"/>
    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="203.234.62.144" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="30001" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="connection state : "/>

        <TextView
            android:id="@+id/connection_status_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>
    <RadioGroup
        android:id="@+id/cycle"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5sec" />

        <RadioButton
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10sec" />

        <RadioButton
            android:id="@+id/ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="60sec" />
    </RadioGroup>
    <RadioGroup
        android:id="@+id/Send"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BT" />

        <RadioButton
            android:id="@+id/wifi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Wifi" />


    </RadioGroup>
    <EditText
        android:id="@+id/input_string_edittext"
        android:hint="input text here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/sendbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send"/>

    <Button
        android:id="@+id/btsendbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BTsend" />
    <Button
        android:id="@+id/ALLsendbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ALLsend" />
</LinearLayout>